.chat
  .flash
    %p.flash__message チャットグループが作成されました。
  .chat-side
    .chat-user
      %h5 groot
      .chat-user__actions
        = link_to root_path, { class: "chat-user__actions__action" } do
          %i{class: "fa fa-pencil-square-o"}
        %end
        = link_to root_path, { class: "chat-user__actions__action" } do
          %i{class: "fa fa-cog"}
        %end
    %ul{class: "chat-groups"}
      %li{class: "chat-group"}
        = link_to root_path, { class: "chat-group__link" } do
          %p{class: "chat-group__link__name"}gardians of galaxy
          %p{class: "chat-group__link__message"}i am groot
        %end
      %li{class: "chat-group"}
        = link_to root_path, { class: "chat-group__link" } do
          %p{class: "chat-group__link__name"}freaking gardians of galaxy
          %p{class: "chat-group__link__message"}i am groot
        %end

  .chat-main
    %div{class: "chat-header clearfix"}
      .chat-header__left
        %h2 freaking gardians of galaxy
        .chat-header__left__members Member: star lord, gamora, rocket, groot, drax, yondu
      .chat-header__right
        = link_to "Edit", root_path, { class: "chat-header__right__edit_btn" }
    .chat-body
      %ul{class: "chat-messages"}
        %li{class: "chat-message"}
          .chat-message__header
            %p{class: "chat-message__name"}groot
            %p{class: "chat-message__time"}2018/07/20 08:26:28
          %p{class: "chat-message__body"}i am groot
        %li{class: "chat-message"}
          .chat-message__header
            %p{class: "chat-message__name"}groot
            %p{class: "chat-message__time"}2018/07/20 08:26:28
          %p{class: "chat-message__body"}i am groot
    .chat-footer
      %form.new_message#new_message
        .chat-footer__body
          %textarea{row: 1, placeholder: "type a message", name: "message", id: "message_body"}
          %label{class: "chat-footer__file"}
            %input{type: "file", id: "message_image"}
            %i{class: "fa fa-image"}
        %input{type: "submit", value: "Send"}
