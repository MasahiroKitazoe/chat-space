.chat
  .chat-side
    .chat-user
      %h5 groot
      .chat-user__actions
        %a{class: "chat-user__action", :href => "/"}
          %i{class: "fa fa-pencil-square-o"}
        %a{class: "chat-user__action", :href => "/"}
          %i{class: "fa fa-cog"}
    %ul{class: "chat-groups"}
      %li{class: "chat-group"}
        %a{class: "chat-group__link", href: "/"}
          %p{class: "chat-group__name"}gardians of galaxy
          %p{class: "chat-group__message"}i am groot
      %li{class: "chat-group"}
        %a{class: "chat-group__link", href: "/"}
          %p{class: "chat-group__name"}freaking gardians of galaxy
          %p{class: "chat-group__message"}i am groot

  .chat-main
    %div{class: "chat-header clearfix"}
      .chat-header__left
        %h2 freaking gardians of galaxy
        .chat-header__members Member: star lord, gamora, rocket, groot, drax, yondu
      .chat-header__right
        %a{class: "chat-header__edit_btn", href: "/"} Edit
    .chat-body
      %ul{class: "chat-messages"}
        %li{class: "chat-message"}
          .chat-message__header
            %p{class: "chat-message__name"}groot
            %p{class: "chat-message__time"}2018/07/20 08:26:28
          %p{class: "chat-message__body"}i am groot
        %li{class: "chat-message"}
          .chat-message__header
            %p{class: "chat-message__name"}groot
            %p{class: "chat-message__time"}2018/07/20 08:26:28
          %p{class: "chat-message__body"}i am groot
    .chat-footer
      %form.new_message#new_message
        .chat-footer__body
          %textarea{row: 1, placeholder: "type a message", name: "message", id: "message_body"}
          %label{class: "chat-footer__file"}
            %input{type: "file", id: "message_image"}
            %i{class: "fa fa-image"}
        %input{type: "submit", value: "Send"}
