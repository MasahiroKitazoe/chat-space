.chat
  = render 'shared/side_bar'

  .chat-main
    .chat-header.clearfix
      .chat-header__left
        %h2= @group.name
        .chat-header__left__members= "Member : " + @group.show_group_member
      .chat-header__right
        = link_to "Edit", edit_group_path(@group.id), class: "chat-header__right__edit--btn"
    .chat-body
      %ul.chat-messages
        = render @messages
    .chat-footer
      = form_for [@group, @message], class: "new_message", id: "new_message" do |f|
        .chat-footer__body
          = f.text_area :body, row: 1, placeholder: "type a message", id: "message_body"
          / = f.label.chat-footer__file
          %label.chat-footer__file
            = f.file_field :image, id: "message_image"
            = fa_icon "image"
        = f.submit "Send"
