.chat-side
  .chat-user
    %h5= current_user.name
    .chat-user__actions
      = link_to new_group_path, class: "chat-user__actions__action",  data: { turbolinks: false }  do
        = fa_icon "pencil-square-o"
      = link_to edit_user_path(current_user.id), class: "chat-user__actions__action" do
        = fa_icon "cog"
  %ul.chat-groups
    - current_user.groups.each do |group|
      %li.chat-groupS
        = link_to group_messages_path(group.id), class: "chat-group__link" do
          %p.chat-group__link__name= group.name
          %p.chat-group__link__message
            =group.show_last_message
